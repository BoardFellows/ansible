description "ScotlandYard"

start on (filesystem)
stop on runlevel [016]

respawn
setuid nobody
setgid nogroup
chdir {{ django_home }}/scotland_yard
env DJANGO_SETTINGS_MODULE=scotland_yard.settings
env DATABASE_URL={{ db_url }}
exec gunicorn -b 127.0.0.1:8000 -w 4 scotland_yard.wsgi --error-logfile /tmp/gunicorn-error.log
